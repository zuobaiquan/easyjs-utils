{
  "buildOptions": {},
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "target": "ES6",
    "noUnusedLocals": false,
    "noEmitOnError": true,
    "allowUnreachableCode": false,
    "module": "ES6",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
    "src/index.js",
  ],
}
